<Window x:Class="TimeFromSeconds.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeFromSeconds"
        mc:Ignorable="d"
        Title="Secondizer" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="Секунд:" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" Height="66" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="TextBox_Seconds" Height="66" Margin="67,13,10,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLines="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextChanged="TextBox_Seconds_TextChanged" VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="TextBox_Result" Margin="10,120,10,10" TextWrapping="Wrap" IsReadOnly="True"/>
        <Label x:Name="label1" Content="В единицах времени:" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Height="31"/>

    </Grid>
</Window>
